{
  "manifest_version": 3,
  "name": "Memorable Passwords",
  "version": "2.0.0",
  "description": "Generate memorable, secure passwords from real words. Easy to remember, hard to crack.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    },
    "default_title": "Memorable Passwords"
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "memorable-passwords@yardev.net"
    }
  }
}
